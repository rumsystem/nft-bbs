      "@types/lru-cache": "^7.10.10",
      "@types/module-alias": "^2.0.1",
      "@types/node": "^18.11.10",
      "jest": "^29.3.1",
      "rimraf": "^3.0.2",
      "ts-jest": "^29.0.3",
      "ts-node": "10.9.1",
      "tsconfig-paths": "^4.1.1"
   }
