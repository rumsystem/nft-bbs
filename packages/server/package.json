   "main": "dist/index.js",
   "types": "dist/index.d.ts",
   "scripts": {
      "dev": "cross-env NODE_ENV=development nodemon --config ./nodemon.json",
      "dev:debug": "cross-env NODE_ENV=development nodemon --config ./nodemon-debug.json",
      "build": "rimraf dist && yarn tsc -b",
      "start": "ts-node-transpile-only index.ts",
      "start:prod": "node dist/index.js",
      "test": "jest",
      "lint": "eslint --ext \"js,jsx,ts,tsx\" .",
      "typeorm": "node -r tsconfig-paths/register -r ts-node/register/transpile-only scripts/typeorm.ts",
      "reset": "yarn typeorm -d ./orm/data-source.ts schema:drop && ts-node-transpile-only utils/reset.ts",
      "migration": "yarn typeorm -d ./orm/data-source.ts migration:generate"
   },
