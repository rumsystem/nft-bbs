      "fp-ts": "^2.13.1",
      "http-errors": "^2.0.0",
      "io-ts": "^2.2.19",
      "js-yaml": "^4.1.0",
      "lru-cache": "^7.14.1",
      "module-alias": "^2.2.2",
      "nft-bbs-types": "*",
      "node-localstorage": "^2.2.1",
      "nodemon": "^2.0.20",
