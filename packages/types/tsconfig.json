{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["./*"]
    },
  },
  "ts-node": {
    "files": true,
  },
  "include": [
    "src",
    "index.ts"
  ]
}
